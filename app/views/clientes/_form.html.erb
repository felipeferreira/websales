<dd><%= text_field :cliente, :contato, :class => 'textfield',:size=>80 -%></dd>

<dt><label for="cliente_telefone">Telefone</label></dt>
<dd><%= text_field :cliente, :telefone, :class => 'textfield',:size=>80 -%></dd>

<dt><label for="cliente_celular">Celular</label></dt>
<dd><%= text_field :cliente, :celular, :class => 'textfield',:size=>80 -%></dd>

<dt><label for="cliente_email">Email</label></dt>
<dd><%= text_field :cliente, :email, :class => 'textfield',:size=>80 -%></dd>

<dd><%= f.submit button_name, :class => "button" -%>&nbsp;&nbsp;<%= link_to 'Cancel', @ticket -%></dd>

</dl>
<%end-%>
