<h1>Listing item_pedidos</h1>

<table>
  <tr>
    <th>Pedido</th>
    <th>Produto</th>
    <th>Quantidade</th>
    <th>Preco</th>
  </tr>

<% @item_pedidos.each do |item_pedido| %>
  <tr>
    <td><%=h item_pedido.pedido_id %></td>
    <td><%=h item_pedido.produto_id %></td>
    <td><%=h item_pedido.quantidade %></td>
    <td><%=h item_pedido.preco %></td>
    <td><%= link_to 'Show', item_pedido %></td>
    <td><%= link_to 'Edit', edit_item_pedido_path(item_pedido) %></td>
    <td><%= link_to 'Destroy', item_pedido, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item_pedido', new_item_pedido_path %>